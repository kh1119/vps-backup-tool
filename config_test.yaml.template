# SSH & đường dẫn
ssh_user: your_username          # SSH username
ssh_host: your_vps_ip           # IP hoặc hostname VPS
ssh_port: 22                    # Cổng SSH
ssh_key: /path/to/your/ssh/key  # Đường dẫn đến SSH private key

# Thư mục gốc - test với thư mục nhỏ hơn
remote_root: /etc/ssh           # Thư mục test (ít files)
local_root: ./backup_data       # Thư mục lưu backup local

# Hiệu năng
threads: 2                      # Ít threads hơn cho test
bwlimit: 0                      # KB/s limit (0 = không giới hạn)

# Thư mục tạm và log
tmp_dir: tmp
log_dir: logs

# Bandwidth monitoring
enable_bandwidth_monitoring: true    # Bật/tắt monitoring băng thông
monitoring_interval: 5               # Kiểm tra băng thông mỗi 5 giây (nhanh hơn cho test)

# Tùy chọn rsync
rsync_opts:
  - --archive
  - --compress
  - --delete
  - --progress
